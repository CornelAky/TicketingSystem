@model TicketingSystem.Models.Ticket

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-4">
    <h1 class="mb-4 text-danger">Delete Ticket</h1>

    <div class="alert alert-warning" role="alert">
        <h4 class="alert-heading">Are you sure you want to delete this ticket?</h4>
        <p>This action cannot be undone.</p>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 fw-bold">Title</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Title)</dd>

                <dt class="col-sm-3 fw-bold">Description</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>

                <dt class="col-sm-3 fw-bold">Creator</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.CreatorBy.FullName)</dd>

                <dt class="col-sm-3 fw-bold">Assigned To</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.AssignedTo.FullName)</dd>

                <dt class="col-sm-3 fw-bold">Status</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Status.StatusName)</dd>

                <dt class="col-sm-3 fw-bold">Priority</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Priority)</dd>

                <dt class="col-sm-3 fw-bold">Created Date</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.CreatedDate)</dd>

                <dt class="col-sm-3 fw-bold">Closed Date</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.ClosedDate)</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" method="post" class="d-flex justify-content-between">
        <input type="hidden" asp-for="TicketId" />
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash"></i> Delete
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle"></i> Back to List
        </a>
    </form>
</div>
