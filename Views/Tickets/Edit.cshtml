@model TicketingSystem.Models.Ticket

@{
    ViewData["Title"] = "Edit Ticket";
}

<div class="container mt-4">
    <h1 class="mb-4 text-primary">Edit Ticket</h1>

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                <input type="hidden" asp-for="TicketId" />

                <!-- Title (Read-only) -->
                <div class="mb-3">
                    <label asp-for="Title" class="form-label">Title</label>
                    <input asp-for="Title" class="form-control-plaintext" readonly />
                </div>

                <!-- Description (Read-only) -->
                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Description</label>
                    <textarea asp-for="Description" class="form-control-plaintext" readonly rows="3"></textarea>
                </div>

                <!-- CreatedById (Read-only) -->
                <div class="mb-3">
                    <label asp-for="CreatedById" class="form-label">Created By</label>
                    <input asp-for="CreatorBy.FullName" class="form-control-plaintext" readonly />
                </div>

                <!-- AssignedTo -->
                <div class="mb-3">
                    <label asp-for="AssignedToId" class="form-label">Assigned To</label>
                    <select asp-for="AssignedToId" class="form-select" asp-items="ViewBag.AssignedToId"></select>
                    <span asp-validation-for="AssignedToId" class="text-danger"></span>
                </div>

                <!-- Status -->
                <div class="mb-3">
                    <label asp-for="StatusId" class="form-label">Status</label>
                    <select asp-for="StatusId" class="form-select" asp-items="ViewBag.StatusId"></select>
                    <span asp-validation-for="StatusId" class="text-danger"></span>
                </div>

                <!-- Priority -->
                <div class="mb-3">
                    <label asp-for="Priority" class="form-label">Priority</label>
                    <select asp-for="Priority" class="form-select" asp-items="ViewBag.Priority"></select>
                    <span asp-validation-for="Priority" class="text-danger"></span>
                </div>

                <!-- CreatedDate (Read-only) -->
                <div class="mb-3">
                    <label asp-for="CreatedDate" class="form-label">Created Date</label>
                    <input asp-for="CreatedDate" class="form-control-plaintext" readonly />
                </div>

                <!-- ClosedDate -->
                <div class="mb-3">
                    <label asp-for="ClosedDate" class="form-label">Closed Date</label>
                    <input asp-for="ClosedDate" class="form-control" />
                    <span asp-validation-for="ClosedDate" class="text-danger"></span>
                </div>

                <!-- Submit Button -->
                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
