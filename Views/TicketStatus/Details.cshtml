@model TicketingSystem.Models.TicketStatus

@{
    ViewData["Title"] = "Ticket Status Details";
}

<div class="container mt-4">
    <h1 class="mb-4 text-primary">Ticket Status Details</h1>

    <div class="card shadow-sm">
        <div class="card-body">
            <h5 class="card-title">Details</h5>
            <dl class="row">
                <dt class="col-sm-4">Status Name</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.StatusName)</dd>
            </dl>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model.StatusId" class="btn btn-warning">
            <i class="bi bi-pencil"></i> Edit
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle"></i> Back to List
        </a>
    </div>
</div>
