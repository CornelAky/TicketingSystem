@model TicketingSystem.Models.Subscription

@{
    ViewData["Title"] = "Delete Subscription";
}

<div class="container mt-4">
    <h1 class="mb-4 text-danger">Delete Subscription</h1>

    <div class="alert alert-warning" role="alert">
        <h3 class="alert-heading">Are you sure you want to delete this subscription?</h3>
        <p>This action cannot be undone. Please confirm your choice.</p>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <dl class="row">
                <!-- User -->
                <dt class="col-sm-4 fw-bold">User</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.User.FullName)</dd>

                <!-- Plan -->
                <dt class="col-sm-4 fw-bold">Plan</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Plan.PlanName)</dd>

                <!-- Start Date -->
                <dt class="col-sm-4 fw-bold">Start Date</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.StartDate)</dd>

                <!-- End Date -->
                <dt class="col-sm-4 fw-bold">End Date</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.EndDate)</dd>

                <!-- Is Active -->
                <dt class="col-sm-4 fw-bold">Active Status</dt>
                <dd class="col-sm-8">
                    @if (Model.IsActive)
                    {
                        <span class="badge bg-success">Active</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Inactive</span>
                    }
                </dd>
            </dl>
        </div>
    </div>

    <!-- Action Buttons -->
    <form asp-action="Delete" class="d-flex justify-content-between">
        <input type="hidden" asp-for="SubscriptionId" />
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash"></i> Confirm Delete
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle"></i> Back to List
        </a>
    </form>
</div>
