@model TicketingSystem.Models.Subscription

@{
    ViewData["Title"] = "Subscription Details";
}

<div class="container mt-4">
    <h1 class="mb-4 text-primary">Subscription Details</h1>

    <div class="card shadow-sm">
        <div class="card-body">
            <dl class="row">
                <!-- User -->
                <dt class="col-sm-4 fw-bold">User</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.User.FullName)</dd>

                <!-- Plan -->
                <dt class="col-sm-4 fw-bold">Plan</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Plan.PlanName)</dd>

                <!-- Start Date -->
                <dt class="col-sm-4 fw-bold">Start Date</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.StartDate)</dd>

                <!-- End Date -->
                <dt class="col-sm-4 fw-bold">End Date</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.EndDate)</dd>

                <!-- Is Active -->
                <dt class="col-sm-4 fw-bold">Active Status</dt>
                <dd class="col-sm-8">
                    @if (Model.IsActive)
                    {
                        <span class="badge bg-success">Active</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Inactive</span>
                    }
                </dd>
            </dl>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="mt-3 d-flex justify-content-between">
        <a asp-action="Edit" asp-route-id="@Model?.SubscriptionId" class="btn btn-warning">
            <i class="bi bi-pencil-square"></i> Edit
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle"></i> Back to List
        </a>
    </div>
</div>
