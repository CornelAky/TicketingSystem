@model TicketingSystem.Models.Subscription

@{
    ViewData["Title"] = "Edit Subscription";
}

<div class="container mt-4">
    <h1 class="mb-4 text-primary">Edit Subscription</h1>

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                <input type="hidden" asp-for="SubscriptionId" />

                <!-- User -->
                <div class="mb-3">
                    <label asp-for="UserId" class="form-label">User</label>
                    <select asp-for="UserId" class="form-select" asp-items="ViewBag.UserId"></select>
                    <span asp-validation-for="UserId" class="text-danger"></span>
                </div>

                <!-- Plan -->
                <div class="mb-3">
                    <label asp-for="PlanId" class="form-label">Plan</label>
                    <select asp-for="PlanId" class="form-select" asp-items="ViewBag.PlanId"></select>
                    <span asp-validation-for="PlanId" class="text-danger"></span>
                </div>

                <!-- Start Date -->
                <div class="mb-3">
                    <label asp-for="StartDate" class="form-label">Start Date</label>
                    <input asp-for="StartDate" class="form-control" placeholder="Enter start date" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>

                <!-- End Date -->
                <div class="mb-3">
                    <label asp-for="EndDate" class="form-label">End Date</label>
                    <input asp-for="EndDate" class="form-control" placeholder="Enter end date" />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>

                <!-- Is Active -->
                <div class="form-check mb-3">
                    <input class="form-check-input" asp-for="IsActive" />
                    <label asp-for="IsActive" class="form-check-label">Active Status</label>
                </div>

                <!-- Submit Button -->
                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Save
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle"></i> Back to List
        </a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
